{
    "name": "material-cell-document",
    "version": "0.5.0",
    "license": "AGPL-3.0",
    "author": "shiy2008@gmail.com",
    "homepage": "https://material.web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/material-cell-document.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/material-cell-document/issues"
    },
    "main": "source/index.html",
    "dependencies": {
        "boot-cell": "^1.5.1",
        "bootstrap-icons": "^1.1.0",
        "cell-router": "^2.0.1",
        "material-cell": "^2.0.0-beta.0",
        "web-cell": "^2.2.0",
        "web-utility": "^2.0.0"
    },
    "devDependencies": {
        "autoprefixer": "^9.8.6",
        "husky": "^4.3.5",
        "lint-staged": "^10.5.3",
        "mark-cell": "^0.4.5",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.2.1",
        "typescript": "^4.1.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,mdx,css,less,json,yml,ts,tsx}": "prettier --write"
    },
    "scripts": {
        "test": "lint-staged",
        "pack-mdx": "rm -rf document/dist/  &&  mark-cell document/source -p web-cell -f createCell",
        "pack-dist": "parcel build source/index.html --public-url .",
        "build": "npm run pack-mdx  &&  npm run pack-dist",
        "start": "npm run pack-mdx  &&  parcel source/index.html --open"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
