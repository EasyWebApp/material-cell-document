{
    "name": "material-cell-document",
    "version": "0.13.0",
    "license": "AGPL-3.0",
    "author": "shiy2008@gmail.com",
    "homepage": "https://material.web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/material-cell-document.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/material-cell-document/issues"
    },
    "main": "source/index.html",
    "dependencies": {
        "boot-cell": "^1.9.1",
        "cell-router": "^2.0.3",
        "classnames": "^2.2.6",
        "github-web-widget": "^3.0.0-beta.8",
        "material-cell": "^2.0.0-rc.1",
        "web-cell": "^2.3.0-beta.4",
        "web-utility": "^2.2.2"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.11",
        "autoprefixer": "^9.8.6",
        "husky": "^4.3.6",
        "less": "^4.0.0",
        "lint-staged": "^10.5.3",
        "mark-cell": "^0.4.6",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "workbox-cli": "^6.0.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,mdx,css,less,json,yml,js,ts,tsx}": "prettier --write"
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "pack-mdx": "mark-cell document/source -p web-cell -f createCell",
        "pack-tsx": "parcel build source/index.html --public-url .",
        "pack-test": "cd document/test/DrawerNav/  &&  parcel build index.html --public-url . -d ../../../dist/test/DrawerNav/",
        "build": "rm -rf dist/ document/dist/  &&  npm run pack-mdx  &&  npm run pack-tsx  &&  npm run pack-test  &&  workbox generateSW",
        "start": "npm run pack-mdx  &&  parcel source/index.html --open"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
